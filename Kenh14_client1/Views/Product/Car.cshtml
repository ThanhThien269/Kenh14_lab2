@model Product
@{

    Layout = "~/Views/Shared/kenhLayout.cshtml";
}
<div class="forDetail">
    <div id="o-button">
        <i class="fa fa-chevron-left" aria-hidden="true"  > 
            @Html.ActionLink(" Back","index","Product",null, new { @style="color:white;text-decoration:none;" })
        </i>
    </div>
    <div style="width:100%;height:500px;">
        <img style="width:60%;height:100%;margin:0 0  0 20%" src="~/Asset/@Model.PhotoUrl"/>
    </div>
    <div id="o-info">
        <h3 style="font-size:50px;margin-top:50px">@Model.Name</h3>
        <div style="float:right;display:flex;margin-right:5%;padding-top:8%">
            <p style="color:white;margin-right:10%;margin-top:2%;font-size:40px">$@Model.Price</p>

           
        </div>
    </div>

</div>
<div class="OverViewDetail">
    <br>
    <h2>OverView</h2>
    <table class="table table-bordered table-dark" style="width:70%;margin:10% 0 0 15%;height:70%">
  <thead>
    <tr style="text-align:center">
      <td scope="col">Detail</td>
      <td scope="col"></td>

      
    </tr>
  </thead>
  <tbody>
      <tr>
      <th scope="col">Kích thước DxRxC</th>
      <th style="width:400px">@Model.Drc</th>
    </tr>
    <tr>
      <th scope="col">Động Cơ</th>
      <th style="width:400px">@Model.Engine</th>
    </tr>
    <tr>
      <th scope="col">Mô-men xoắn cực đại</th>
      <th style="width:400px">@Model.Momen</th>
    </tr>
    <tr>
      <th scope="col">Tiêu thụ nhiên liệu</th>
      <th style="width:400px">@Model.Consumption</th>
    </tr>
    <tr>
      <th scope="col">Chỗ ngồi</th>
      <th style="width:400px">@Model.Seat</th>
    </tr>
    </tbody>
    </table>
</div>
 <div class="footer">

           @Html.Partial("_FooterPartialView")
        </div>